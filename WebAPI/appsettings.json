{
  "AllowedHosts": "*",
  "ConnectionString": {
    "Database": "User ID=postgres;Password=admin;Host=database;Port=5432;Database=nippo;Pooling=true;"
  },
  "JwtOptions": {
    "SecretKey": "thisismocksecretkeyfordevelopmentenvironment",
    "Audience": "nippo",
    "Issuer": "authservice",
    "Expires": "12"
  },
  "AuthServiceUrl": "http://localhost:5020/",
  "Minio": {
    "Endpoint": "minio:9000",
    "ExternalEndpoint": "http://localhost/storage",
    "AccessKey": "rootUser",
    "SecretKey": "rootPassword",
    "BucketName": "nippo"
  },
  "CacheSettings": {
    "RedisCache": "redis:6379"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "MessageBroker": {
    "Host": "amqp://rabbitmq:5672",
    "Username": "guest",
    "Password": "guest"
  }
}
