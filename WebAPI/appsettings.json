{
  "AllowedHosts": "*",
  "ConnectionString": {
    "Database": "User ID=postgres;Password=admin;Host=database;Port=5432;Database=nippo;Pooling=true;"
  },
  "JwtOptions": {
    "SecretKey": "somebodyoncetoldmetheworldisgonnarollme",
    "ExpiresHours": "12"
  },
  "Minio": {
    "Endpoint": "minio:9000",
    "ExternalEndpoint": "http://localhost/storage",
    "AccessKey": "rootUser",
    "SecretKey": "rootPassword",
    "BucketName": "nippo"
  },
  "CacheSettings": {
    "RedisCache": "redis:6379"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://loki:3100",
          "labels": [
            {
              "key": "app",
              "value": "nippo"
            },
            {
              "key": "env",
              "value": "Development"
            }
          ],
          "propertiesAsLabels": [ "Level" ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "MessageBroker": {
    "Host": "amqp://rabbitmq:5672",
    "Username": "guest",
    "Password": "guest"
  }
}
